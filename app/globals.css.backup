@import "tailwindcss";

:root {
  --background: #ffffff;
  --foreground: #171717;
}

/* Global box-sizing */
html {
  box-sizing: border-box;
}

*, *::before, *::after {
  box-sizing: inherit;
}

@theme inline {
  --color-background: var(--background);
  --color-foreground: var(--foreground);
  --font-sans: var(--font-geist-sans);
  --font-mono: var(--font-geist-mono);
   --breakpoint-3xl: 2560px;
}
@layer utilities {
  @media (min-width: 2560px) {
    .text-3xl-custom {
      font-size: 2rem;
    }
  }
  @keyframes scale-in {
    0% {
      opacity: 0.5;
      transform: scale(1);
    }
    100% {
      opacity: 1;
      transform: scale(1.1);
    }
  }

  .scale-in {
    opacity: 0.5;
    transform: scale(0.8);
    animation: scale-in 0.6s ease-out forwards;
  }

  /* Scale out animation */
  @keyframes scale-out {
    0% {
      opacity: 1;
      transform: scale(1.1);
    }
    100% {
      opacity: 1;
      transform: scale(1);
    }
  }

  .scale-out {
    animation: scale-out 0.6s ease-in forwards;
  }

  /* Continuous scale/pulse animation */
  @keyframes scale-pulse {
    0%, 100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.05);
    }
  }

  .scale-pulse {
    animation: scale-pulse 2s ease-in-out infinite;
  }
  /* Fade-in */
.fade-in {
  opacity: 0;
  transform: translateY(20px);
  transition: opacity 0.8s ease-out, transform 0.8s ease-out;
}
.fade-in.show {
  opacity: 1;
  transform: translateY(0);
}
@keyframes translate-up {
  0% {
    opacity: 0;
    transform: translateY(30px);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

.translate-up {
  opacity: 0;
  transform: translateY(30px);
  animation: translate-up 0.8s ease-out forwards;
}

/* Text typing effect */
.typing-text {
  display: inline-block;
  border-right: 2px solid #145E8C;
  white-space: nowrap;
  overflow: hidden;
  animation: typing 2s steps(30, end), blink 0.75s step-end infinite;
}
@keyframes typing {
  from { width: 0; }
  to { width: 100%; }
}
@keyframes blink {
  50% { border-color: transparent; }
}

/* Floating icons */
.float {
  transform: translateY(0);
  animation: float 3s ease-in-out infinite alternate;
}
@keyframes float {
  from { transform: translateY(0); }
  to { transform: translateY(-10px); }
}

}

video::-webkit-media-controls {
  display: none !important;
}

video {
  object-fit: cover;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.custom-clip-path {
  clip-path: circle(70% at 30% 30%);
}

